---
const today = new Date()
---

<footer class="footer">
	<ul class="footer__links">
		<li class="footer__link-item"><a href="/rss.xml" class="footer__link">RSS Feed</a></li>
	</ul>
	<p class="footer__copyright">&copy; {today.getFullYear()} shuzhi.zone All rights reserved.</p>
</footer>

<style>
	.footer {
		display: flex;
		flex-direction: column;
		align-items: center;

		background-color: var(--z-color-black);

		border-color: var(--z-color-border);
		border-top: 1px solid var(--z-color-white);

		font-size: var(--z-text-sm);
	}

	.footer__links {
		list-style: none;
	}

	.footer__copyright {
		color: var(--z-color-text-secondary);

		font-size: var(--z-text-2xs);
	}

	/* md	48rem (768px) */
	@media (width >= 48rem) {
		.footer {
			font-size: var(--z-text-base);
		}

		.footer__copyright {
			font-size: var(--z-text-xs);
		}
	}

	/* lg	64rem (1024px) */
	@media (width >= 64rem) {
		.footer {
			font-size: var(--z-text-lg);
		}

		.footer__copyright {
			font-size: var(--z-text-sm);
		}
	}
</style>
