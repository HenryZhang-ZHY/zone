---
import type { CollectionEntry } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'
import BaseLayout from '../layouts/BaseLayout.astro'

type Props = CollectionEntry<'blog'>['data']

const { title, description, pubDate, updatedDate } = Astro.props
---

<BaseLayout title={title} description={description}>
	<main>
		<article>
			<header class="article-header">
				<h1 class="article-title">{title}</h1>
				<div class="article-meta">
					<time class="publish-date">
						<FormattedDate date={pubDate} />
					</time>
					{
						updatedDate && (
							<div class="updated-date">
								Updated on <FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
			</header>
			<div class="z-markdown-content">
				<slot />
			</div>
		</article>
	</main>
</BaseLayout>

<style>
	main {
		max-width: 728px;
		margin: 0 auto;
		padding: 4rem 2rem 6rem;
		min-height: calc(100vh - 200px);
	}

	article {
		width: 100%;
	}

	.article-header {
		margin-bottom: 3rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--z-color-hairline-light);
		text-align: left;
	}

	.article-title {
		font-size: clamp(var(--z-text-h3), 4vw, var(--z-text-h1));
		font-weight: 700;
		line-height: 1.2;
		margin: 0 0 1.5rem 0;
		letter-spacing: -0.02em;
		color: var(--z-color-text);
	}

	.article-meta {
		display: flex;
		align-items: center;
		gap: 1rem;
		font-size: var(--z-text-sm);
		margin-bottom: 0;
	}

	.publish-date {
		font-weight: 400;
		color: var(--z-color-text-secondary);
	}

	.updated-date {
		font-style: italic;
		color: var(--z-color-text-dimmed);
		font-size: var(--z-text-xs);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		main {
			padding: 2rem 1.5rem 4rem;
			max-width: 100%;
		}

		.article-header {
			margin-bottom: 2rem;
			padding-bottom: 1.5rem;
		}

		.article-title {
			font-size: var(--z-text-4xl);
			margin-bottom: 1rem;
		}

		.article-meta {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}
	}

	@media (max-width: 480px) {
		main {
			padding: 1.5rem 1rem 3rem;
		}

		.article-title {
			font-size: var(--z-text-3xl);
			line-height: 1.2;
		}
	}

	/* Large screens */
	@media (min-width: 1200px) {
		main {
			max-width: 768px;
			padding: 5rem 2rem 8rem;
		}

		.article-header {
			margin-bottom: 4rem;
		}
	}
</style>
