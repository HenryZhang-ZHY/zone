---
import BaseLayout from '../layouts/BaseLayout.astro'

import { getCollection } from 'astro:content'
import FormattedDate from '../components/FormattedDate.astro'

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<BaseLayout>
	<main class="blog-list">
		<section class="blog-list__container">
			{
				posts.length > 0 ? (
					posts.map((post) => (
						<article class="blog-list__item">
							<a href={`/blog/${post.id}/`} class="blog-list__link">
								<h2 class="blog-list__title">{post.data.title}</h2>
								{post.data.description && <p class="blog-list__excerpt">{post.data.description}</p>}
								<div class="blog-list__meta">
									<time class="blog-list__date">
										<FormattedDate date={post.data.pubDate} />
									</time>
								</div>
							</a>
						</article>
					))
				) : (
					<div class="blog-list__empty">
						<h3>No posts yet</h3>
						<p>Check back later for new content.</p>
					</div>
				)
			}
		</section>
	</main>
</BaseLayout>

<style>
	* {
		box-sizing: border-box;
	}

	.blog-list {
		max-width: 960px;
		margin: 0 auto;
		padding: 4rem 2rem 6rem;
		min-height: calc(100vh - 200px);
	}

	.blog-list__container {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.blog-list__item {
		padding: 2rem 0;
		border-bottom: 1px solid var(--z-color-hairline-light);
	}

	.blog-list__item:last-child {
		border-bottom: none;
	}

	.blog-list__link {
		display: block;
		text-decoration: none;
		color: inherit;
	}

	.blog-list__title {
		font-size: var(--z-text-h4);
		font-weight: 700;
		line-height: 1.3;
		margin: 0 0 0.75rem 0;
		letter-spacing: -0.01em;
		color: var(--z-color-text);
	}

	.blog-list__link:hover .blog-list__title {
		color: var(--z-color-text-accent);
	}

	.blog-list__excerpt {
		font-size: var(--z-text-base);
		color: var(--z-color-text-secondary);
		line-height: var(--z-line-height);
		margin: 0 0 1rem 0;
		font-weight: 400;
	}

	.blog-list__meta {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: var(--z-text-sm);
		color: var(--z-color-text-dimmed);
	}

	.blog-list__date {
		font-weight: 400;
		text-transform: none;
		letter-spacing: 0;
	}

	/* Empty state */
	.blog-list__empty {
		text-align: center;
		padding: 4rem 0;
		color: var(--z-color-text-secondary);
	}

	.blog-list__empty h3 {
		font-size: var(--z-text-h4);
		margin: 0 0 1rem 0;
		color: var(--z-color-text);
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.blog-list {
			padding: 2rem 1.5rem 4rem;
			max-width: 100%;
		}

		.blog-list__item {
			padding: 1.5rem 0;
		}

		.blog-list__title {
			font-size: var(--z-text-2xl);
			margin-bottom: 0.5rem;
		}

		.blog-list__excerpt {
			font-size: var(--z-text-sm);
			margin-bottom: 0.75rem;
		}

		.blog-list__meta {
			font-size: var(--z-text-xs);
		}
	}

	@media (max-width: 480px) {
		.blog-list {
			padding: 1.5rem 1rem 3rem;
		}

		.blog-list__item {
			padding: 1.25rem 0;
		}

		.blog-list__title {
			font-size: var(--z-text-xl);
			line-height: 1.25;
		}

		.blog-list__excerpt {
			font-size: var(--z-text-sm);
			line-height: 1.5;
		}
	}

	/* Large screens */
	@media (min-width: 1200px) {
		.blog-list {
			max-width: 960px;
			padding: 5rem 2rem 8rem;
		}

		.blog-list__item {
			padding: 2.5rem 0;
		}
	}
</style>
