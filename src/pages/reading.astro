---
import BaseLayout from '../layouts/BaseLayout.astro'

import { Image } from 'astro:assets'
import { SITE_TITLE } from '../consts'
import { getCollection } from 'astro:content'

const books = await getCollection('book')
---

<BaseLayout title={`Reading List | ${SITE_TITLE}`}>
  <main>
    <section class="books-container">
      {
        books.map((book, index) => (
          <article class="book-item">
            <a href={book.data.ogUrl} class="book-link" target="_blank" rel="noopener noreferrer">
              <div class="book-cover">
                <Image src={book.data.ogImage} alt={`Cover of ${book.data.title}`} loading={index < 12 ? 'eager' : 'lazy'} width={140} height={210} referrerpolicy={'no-referrer'} />
              </div>
              <h2 class="book-title">{book.data.title}</h2>
            </a>
          </article>
        ))
      }
    </section>
  </main>
</BaseLayout>

<style>
  * {
    box-sizing: border-box;
  }

  main {
    max-width: 960px;
    margin: 0 auto;
    padding: 4rem 2rem 6rem;
    min-height: calc(100vh - 200px);
  }

  .books-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 3rem 2rem;
  }

  .book-item {
    display: flex;
    flex-direction: column;
  }

  .book-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .book-cover {
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: var(--z-color-gray-6);
    border: 1px solid var(--z-color-hairline-light);
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    background: var(--z-color-gray-6);
  }

  .book-title {
    font-size: var(--z-text-lg);
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
    color: var(--z-color-text);
  }

  .book-link:hover .book-title {
    color: var(--z-color-text-accent);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    main {
      padding: 2rem 1.5rem 4rem;
    }

    .books-container {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem 1.5rem;
    }

    .book-link {
      gap: 0.75rem;
    }

    .book-title {
      font-size: var(--z-text-base);
    }
  }

  @media (max-width: 480px) {
    main {
      padding: 1.5rem 1rem 3rem;
    }

    .books-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem 1.25rem;
    }

    .book-link {
      gap: 0.5rem;
    }

    .book-title {
      font-size: var(--z-text-sm);
      line-height: 1.3;
    }
  }

  /* Large screens */
  @media (min-width: 1024px) {
    .books-container {
      grid-template-columns: repeat(5, 1fr);
      gap: 4rem 3rem;
    }

    .book-link {
      gap: 1.25rem;
    }

    .book-title {
      font-size: var(--z-text-xl);
    }
  }

  @media (min-width: 1280px) {
    .books-container {
      grid-template-columns: repeat(6, 1fr);
    }
  }
</style>
