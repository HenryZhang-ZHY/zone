---
import BaseLayout from '../layouts/BaseLayout.astro'

import { Image } from 'astro:assets'
import { SITE_TITLE } from '../consts'
import { getCollection } from 'astro:content'

const books = await getCollection('book')
---

<BaseLayout title={`Reading List | ${SITE_TITLE}`}>
  <main>
    <header class="page-header">
      <h1 class="page-title">Reading List</h1>
      <p class="page-description">Books that have shaped my thinking and approach to work and life.</p>
    </header>

    <section class="books-container">
      {
        books.map((book, index) => (
          <div class="book-item">
            <a href={book.data.ogUrl} class="book-link" target="_blank" rel="noopener noreferrer">
              <div class="book-cover">
                <Image src={book.data.ogImage} alt={`Cover of ${book.data.title}`} loading={index < 12 ? 'eager' : 'lazy'} width={140} height={210} referrerpolicy={'no-referrer'} />
              </div>
              <div class="book-content">
                <h2 class="book-title">{book.data.title}</h2>
              </div>
            </a>
          </div>
        ))
      }
    </section>
  </main>
</BaseLayout>

<style>
  * {
    box-sizing: border-box;
  }

  main {
    max-width: 1000px;
    margin: 0 auto;
    padding: 4rem 2rem 6rem;
    min-height: calc(100vh - 200px);
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: var(--z-text-5xl);
    font-weight: 800;
    margin: 0 0 1rem 0;
    color: var(--z-color-text);
    letter-spacing: -0.02em;
  }

  .page-description {
    font-size: var(--z-text-lg);
    color: var(--z-color-text-secondary);
    margin: 0 0 2rem 0;
  }

  .books-count {
    font-size: var(--z-text-sm);
    color: var(--z-color-text-dimmed);
    margin-bottom: 2rem;
    text-align: center;
  }

  .books-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .book-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
    border-radius: 16px;
    background: var(--z-color-bg-inline-code);
    text-align: center;
    border-bottom: 1px solid var(--z-color-hairline-light);
  }

  .book-cover {
    flex-shrink: 0;
    width: 120px;
    height: 180px;
    overflow: hidden;
    border-radius: 12px;
    margin-bottom: 1.5rem;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .book-content {
    flex: 1;
    min-width: 0;
    width: 100%;
  }

  .book-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .book-title {
    font-size: var(--z-text-lg);
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
    color: var(--z-color-text);
  }

  .book-link:hover .book-title {
    color: var(--z-color-text-accent);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    main {
      padding: 2rem 1.5rem 4rem;
      max-width: 100%;
    }

    .page-title {
      font-size: var(--z-text-h1);
    }

    .page-description {
      font-size: var(--z-text-base);
      margin-bottom: 2rem;
    }

    .books-container {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
      gap: 1.5rem;
    }

    .book-item {
      padding: 1.5rem;
    }

    .book-cover {
      width: 100px;
      height: 150px;
      margin-bottom: 1rem;
    }

    .book-title {
      font-size: var(--z-text-base);
    }
  }

  @media (max-width: 480px) {
    main {
      padding: 1.5rem 1rem 3rem;
    }

    .page-title {
      font-size: var(--z-text-h3);
    }

    .books-container {
      grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
      gap: 1rem;
    }

    .book-item {
      padding: 1.25rem;
    }

    .book-cover {
      width: 80px;
      height: 120px;
    }

    .book-title {
      font-size: var(--z-text-sm);
      line-height: 1.3;
    }
  }

  /* Large screens */
  @media (min-width: 1200px) {
    main {
      max-width: 1000px;
      padding: 5rem 2rem 8rem;
    }

    .books-container {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 2.5rem;
    }

    .book-item {
      padding: 2.5rem;
    }

    .book-cover {
      width: 140px;
      height: 210px;
      margin-bottom: 2rem;
    }

    .book-title {
      font-size: var(--z-text-xl);
    }

    .page-description {
      margin-bottom: 4rem;
    }
  }
</style>
